pipeline {
    agent any

    stages {
        stage('Construir y levantar contenedores') {
            steps {
                echo '🛠️ Construyendo y levantando contenedores...'
                sh 'docker-compose down --volumes --remove-orphans || true'
                sh 'docker-compose build'
                sh 'docker-compose up -d'
            }
        }

        stage('Esperar inicio de servicios') {
            steps {
                echo '⏳ Esperando 60 segundos para que los servicios arranquen...'
                sh 'sleep 60'
            }
        }

        // stage('Probar Endpoints') {
        //     steps {
        //         echo '🔍 Probando aplicación en puerto 3000'
        //         sh 'curl -f http://localhost:3000/ || exit 1'

        //         echo '🔍 Probando aplicación en puerto 4000'
        //         sh 'curl -f http://localhost:4000/ || exit 1'
        //     }
        // }

        // stage('Apagar contenedores') {
        //     steps {
        //         echo '🧹 Apagando contenedores...'
        //         sh 'docker-compose down --volumes --remove-orphans'
        //     }
        // }
    }
}
